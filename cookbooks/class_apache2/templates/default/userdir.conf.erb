<IfModule mod_userdir.c>
    UserDir disabled <%= node['class_apache']['userdir']['disabled'].join(" ") %>
    UserDir <%= node['class_apache']['userdir'] %>

    <Directory /home/*/<%= node['class_apache']['userdir']['dir'] %>>
        Options Indexes Includes FollowSymLinks
        AllowOverride All
        Allow from all
        Order deny,allow
    </Directory>
</IfModule>
