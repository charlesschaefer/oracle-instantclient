{
  "name": "class_appserver_base",
  "default_attributes": {
  },
  "json_class": "Chef::Role",
  "env_run_lists": {
  },
  "run_list": [
    "role[class_base]",
    "recipe[cla_unix_baseline::class_appserver]",
    "recipe[class_apache2::vhosts]"
  ],
  "description": "",
  "chef_type": "role",
  "override_attributes": {
    "apache": {
      "listen_ports": [ "80", "443" ],
      "timeout": 300,
      "keepalive": "On",
      "traceenable": "Off",
      "user": "www-data",
      "group": "www-data",
      "contact": "classoad@umn.edu",
      "limitrequestbody": 1093941836,
      "serversignature": "Off",
      "directoryindex": ["index.php", "index.html"],
      "prefork": {
        "startservers": 10,
        "minspareservers": 5,
        "maxspareservers": 10,
        "maxclients": 50,
        "maxrequestsperchild": 0
      }
    },
    "class_php": {
      "short_open_tag": "On",
      "expose_php": "Off",
      "max_execution_time": 10000,
      "memory_limit": "256M",
      "error_reporting": "E_ALL & ~E_NOTICE & ~E_DEPRECATED & ~E_STRICT",
      "display_errors": "On",
      "log_errors": "Off",
      "html_errors": "Off",
      "register_globals": "On", 
      "register_long_arrays": "Off",
      "register_argc_argv": "On",
      "post_max_size": "100M",
      "magic_quotes_gpc": "On", 
      "upload_max_filesize": "999M",
      "date_timezone": "America/Chicago",
      "date_default_latitude": "44.975952",
      "date_default_longitude": "-93.236699",
      "mysql_allow_persistent": "Off",
      "session_gc_maxlifetime": 10800,
      "zlib_output_compression": "On",
      "eaccelerator_shm_size": 32,
      "session_save_handler": "user",
      "auto_prepend_file": "/data/www/environment/mysql_session_handler.php"
    },
    "memcached": {
      "user": "nobody",
      "memory": 64,
      "port": 11211
    },
    "class_crontasks": {
      "user": "class_tasks",
      "groups": ["www-data","classadm"],
      "admin_group": "classadm"
    },
    "class_clustersync": {
      "sync_dirs": [ "/data/www/htdocs", "/data/www/ssdb_files", "/data/www/user_files" ],
      "servers": [
        "mordor5.class.umn.edu", 
        "mordor6.class.umn.edu", 
        "mordor7.class.umn.edu", 
        "mordor8.class.umn.edu"
      ]
    }
  }
}
